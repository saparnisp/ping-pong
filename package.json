{
  "name": "tetris-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer Tetris game",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "dev": "nodemon",
    "deploy:hostinger": "node scripts/hostinger-deploy.js"
  },
  "engines": {
    "node": "22.13.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "nodemonConfig": {
    "verbose": true,
    "execMap": {
      "js": "node src/index.js"
    },
    "ignore": [
      "*.test.js",
      "**/fixtures/**"
    ],
    "watch": [
      "src/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,html,css"
  }
}
